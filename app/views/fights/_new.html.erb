<h2>Start a new fight: </h2>

<div class="form">
  <%= simple_form_for @fight do |f| %>
    <div class="fighter-input">
      <%= f.input :fighter_1_id, collection: @warriors, label: "1st catfighter", include_blank: false %>
      <%= f.input :accessory_1_id, collection: Accessory.all, label: "Accessory", include_blank: false%>

    </div>
    <div class="fighter-input">
    <%= f.input :fighter_2_id, collection: @warriors, label: "2nd catfighter", include_blank: false %>
    <%= f.input :accessory_2_id, collection: Accessory.all,  label: "Accessory", include_blank: false%>
    </div>
    <br>
    <%= f.submit "Fight",input_html: {id: 'btn-submit'} %>
  <% end %>
</div>

