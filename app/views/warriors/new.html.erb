<div class="flex-container">

  <h1>New catfighter: </h1>
  <p class="text-centered"> Please fill all information regarding your catfighter:</p>

  <div class="form">
      <%= simple_form_for @warrior do |f| %>
        <%= f.input :name %>
        <%= f.input :intro %>
        <%= f.input :life_points, label: "Life points", placeholder: '0 - 200', input_html: { min: 0, max: 200, step: 'any' } %>
        <%= f.input :strength, label: "Attack points", collection: (0..10)%>
        <%= f.input :xp, disabled: true, label: "XP points" %>
        <%= f.file_field :avatar, input_html: {required: true } %>
        <br>
        <%= f.submit "Enter the arena",input_html: {id: 'btn-submit'} %>
      <% end %>
  </div>

  <div class="center-items">
    <%= link_to "Back to Arena", root_path, class: "btn-back" %>
  </div>
</div>
